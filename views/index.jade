extends layout

block content
  .container
    .jumbotron
      h1 Search tweets
      form(action='/search' method='get')
        .form-group
          label.control-label Your keyword
          .input-group
            input.form-control(type='text' name='q')
            span.input-group-btn
              button.btn.btn-primary(type='submit') Search
              
    - if(data)
      - for(var i = 0; i < data.length; i++)
        .panel.panel-primary
          .panel-heading
            img.pull-left(src='#{data[i].user.profile_image_url}')
            h2.panel-title #{data[i].user.name} - @#{data[i].user.screen_name}`
          .panel-body= data[i].text
      
